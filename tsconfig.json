{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "build/**/*.js",
  ],
  "esModuleInterop": true,
}
